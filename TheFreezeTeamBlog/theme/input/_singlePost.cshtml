@model IDocument

@{
    string excerpt = Model.GetString(Statiq.Html.HtmlKeys.Excerpt);
    string imageUrl = "/images/" + Model.GetString(WebKeys.Image);
    int readTime = excerpt.Length / 160;
    var description = excerpt == null
        ? string.Empty
        : excerpt.Substring(0, Math.Min(180, excerpt.Length));
    var finalDescription = description.Remove(0, 3);
}

