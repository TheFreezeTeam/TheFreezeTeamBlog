@model IDocument

@{
    string excerpt = Model.GetString(Statiq.Html.HtmlKeys.Excerpt);
    string imageUrl = "/images/" + Model.GetString(WebKeys.Image);
    int readTime = excerpt.Length / 160;
    var description = excerpt == null
        ? string.Empty
        : excerpt.Substring(0, Math.Min(130, excerpt.Length));
    var removeFirstThree = description.Remove(0, 3);
    var removeLastTheree = removeFirstThree.Remove(removeFirstThree.Length - 4, 4);
    var context = removeLastTheree.Replace("<code>", "").Replace("</code>", "").Replace("<p>", "").Replace("</p>","");
}

