<!-- tags.cshtml -->
@{
  IReadOnlyList<string>? tags = Model.GetTags();
}

<section class="flex flex-wrap items-center content-between w-full gap-x-2 ">
  @if(tags != null)
  {
    @foreach (var tag in tags)
    {
      <object
        class="flex-1 px-6 py-1 mt-2 text-xs font-semibold text-center text-gray-800 bg-gray-100 dark:bg-gray-600 rounded md:text-sm hover:text-emerald-500 hover:bg-gray-300 dark:text-emerald-300 dark:hover:text-emerald-700"
      >
        <a href="@Context.GetLink(tag)">
          <span class="whitespace-nowrap">@tag</span>
        </a>
      </object>
    }
  } else
  {
    <div>no tags</div>
  }
</section>
