<ul class="list-reset flex flex-1 md:flex-none items-center">
  <li class="mr-1">
    <a class="text-xs inline-block text-gray-400 no-underline hover:text-white py-2 px-2 uppercase front-thin transition duration-500 ease-in-out" href="/index.html">Home</a>
  </li>
  @foreach (IDocument doc in OutputPages.GetChildrenOf("index.html").Where(x => x.GetBool("ShowInNavbar", true)).OrderBy(x => x.GetInt(Keys.Order)))
  {
    // Don't add the home page to the nav bar
    if (doc.Destination != "index.html")
    {
      <li class="mr-1">
        @Html.DocumentLink(doc, new Dictionary<object, object> { { "class", "text-xs inline-block text-gray-400 no-underline py-2 px-2 hover:white uppercase front-thin transition duration-500 ease-in-out" } })
      </li>
    }
  }
  <li class="mr-1">
    <a
      class="text-xs sm:mr-4 inline-block text-gray-400 no-underline hover:text-white py-2 px-2 uppercase front-thin transition duration-500 ease-in-out"
      href="/posts/StevenTCramer/2017/12/17/solid">
      About Us
    </a>
  </li>
</ul>
