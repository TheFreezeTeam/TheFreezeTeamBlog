<nav class="bg-gray-900 p-4 mt-0 w-full">
  <div class="container mx-auto flex items-center w-10/12">
    <div class="flex text-white font-extrabold">
    </div>
    <div class="flex pl-4 text-sm">
      <ul class="list-reset flex justify-between flex-1 md:flex-none items-center">
        <li class="mr-2">
          <a class="inline-block py-2 px-2 text-white no-underline transition duration-500 ease-in-out" href="/index">Home</a>
        </li>
        @foreach (IDocument doc in OutputPages.GetChildrenOf("index.html").Where(x => x.GetBool("ShowInNavbar", true)).OrderBy(x => x.GetInt(Keys.Order)))
        {
          // Don't add the home page to the nav bar
          if (doc.Destination != "index.html")
          {
            <li class="mr-2">
              @Html.DocumentLink(doc, new Dictionary<object, object> { { "class", "inline-block py-2 px-2 text-white no-underline hover:text-gray-300 transition duration-500 ease-in-out" } })
            </li>
          }
        }
         <li class="mr-2">
             <a class="inline-block py-2 px-2 text-white no-underline transition duration-500 ease-in-out" href="/posts/aboutus">About Us</a>
         </li>
      </ul>
    </div>
  </div>
</nav>
