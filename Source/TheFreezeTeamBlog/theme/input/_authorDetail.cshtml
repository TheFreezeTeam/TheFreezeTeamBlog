@model IDocument

<div class="w-full bg-gray-100 p-5 rounded shadow-lg">
  <div class="flex justify-center">
    <img src="@Model.GetString("AuthorImage")" class="border-4 border-gray-300 hover:border-gray-600 transition duration-500 ease-in-out transform hover:scale-105 transition duration-500 ease-in-out h-20 w-20 lg:w-32 lg:h-32 rounded-full object-fill">
  </div>
  <p class="text-center text-sm font-bold mt-2">@Model.GetString("Author")</p>
  <div class="flex justify-center mt-2">
    @if (!string.IsNullOrEmpty(Model.GetString("AuthorFacebook"))) {
      <a target="_blank" href="https://www.facebook.com/@Model.GetString("AuthorFacebook")"><img class="w-7 h-7 mr-2 hover:opacity-80 transition duration-500 ease-in-out" src="~/images/Icon/facebook.svg" /></a>
    }
    @if (!string.IsNullOrEmpty(Model.GetString("AuthorTwitter")))
    {
       <a target="_blank" href="https://www.twitter.com/@Model.GetString("AuthorTwitter")"><img class="w-7 h-7 mr-2 hover:opacity-80 transition duration-500 ease-in-out " src="~/images/Icon/twitter.svg" /></a>
    }
    @if (!string.IsNullOrEmpty(Model.GetString("AuthorLinkedIn")))
    {
      <a target="_blank" href="https://www.linkedin.com/in/@Model.GetString("AuthorLinkedIn")"><img class="w-7 h-7 mr-2 hover:opacity-80 transition duration-500 ease-in-out " src="~/images/Icon/linkedin.svg" /></a>
    }
     @if (!string.IsNullOrEmpty(Model.GetString("AuthorCodingGame")))
    {
       <a target="_blank" href="https://www.codingame.com/profile/@Model.GetString("AuthorCodingGame")"><img class="w-7 h-7 rounded mr-2 hover:opacity-80 transition duration-500 ease-in-out" src="~/images/Icon/codingame.svg" /></a>
    }
  </div>
  @if (!string.IsNullOrEmpty(Model.GetString("AuthorBio")))
    {
       <p class="text-center italic text-sm">@Model.GetString("AuthorBio")</p>
    }

</div>


